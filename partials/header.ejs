<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-dark-5@1.1.3/dist/css/bootstrap-night.min.css" rel="stylesheet">
        
<style>
.butn {
  background: linear-gradient(10deg, #5d328c, #8c3278);
  border: 2px solid;
  border-color: #f8589e;
  border-radius: 20px;
  width: 50%;
  margin: 0 auto;
}
.butn2 {
  background: linear-gradient(10deg, #5d328c, #8c3278);
  border: 2px solid;
  border-color: #f8589e;
  border-radius: 20px;  
  margin: 0 auto;
}
.guild {
  background: linear-gradient(to top right, #210e5e, #6c328c);
  background-size: cover;
  border-radius: 12px;
  width: 175px;
  height: 250px;
  margin: 4rem;
  border: 4px solid white;
  align-items: center;
}
.guildIcon {
  max-width: 75px;
  border-radius: 25%;
}
.guildMissingIcon {
  max-width: 75px;
  border-radius: 25%;
}
.potato{
  background: linear-gradient(to top right, #350e5e, #b31b8f);
}
.seperator {
    padding: 25px 0;
}
@media only screen and (min-width: 992px) {
  .guild{
    width: 300px;
    height: 350px;
    margin: 4rem;
    border: 4px solid white;
  }
  .guildIcon {
    max-width: 150px;
    border-radius: 50%;
  }
  .guildMissingIcon {
    max-width: 150px;
    border-radius: 50%;
  }
}
</style>
  <%- dashboardConfig.injectCSS ? `<style>${dashboardConfig.injectCSS}</style>` : '' %>
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-dark" style="background: linear-gradient(10deg, #210e5e, #6c328c); border: 0; border-bottom: 4px solid white;">
    <div class="container-fluid">
      <a class="navbar-brand"><%= bot?.user?.username %></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarText">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/">Home</a>
          </li>
          <% if(hasClientSecret) { %>
            <li class="nav-item">
              <a class="nav-link" href="/selector">Dashboard</a>
            </li>
          <% } %>
          <li class="nav-item">
            <a class="nav-link" href="<%= dashboardDetails.inviteUrl ? dashboardDetails.inviteUrl : `https://discord.com/oauth2/authorize?client_id=${bot.user.id}&scope=bot&permissions=8` %>">Invite</a>
          </li>
          <% if(dashboardDetails.serverUrl) { %>
            <li class="nav-item">
              <a class="nav-link" href="<%= dashboardDetails.serverUrl %>">Discord Server</a>
            </li>
          <% } %>
        </ul>
        <% if(hasClientSecret) { %>
          <ul class="navbar-nav">
            <% if (user) { %>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarScrollingDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                  <%= user.username %>#<%= user.discriminator %>
                </a>
                <ul class="dropdown-menu" aria-labelledby="navbarScrollingDropdown">
                  <!-- <li><hr class="dropdown-divider"></li> -->
                  <li><a class="dropdown-item" href="/auth/logout">Logout</a></li>
                </ul>
              </li>
              </li>
            <% } else { %>
              <li class="nav-item"><a href="/auth/login" class="nav-link">Login</a></li>
            <% } %>
          </ul>
        <% } %>
      </div>
    </div>
  </nav>